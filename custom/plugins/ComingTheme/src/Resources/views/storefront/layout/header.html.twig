{% sw_extends '@Storefront/storefront/layout/header.html.twig' %}

{% block base_header_inner %}
    {# Remove container wrapper so header and inner header content are full width #}
    {% sw_include '@Storefront/storefront/layout/header/header.html.twig' %}
{% endblock %}

{% block base_navigation %}
    {# Keep the nav wrapper but let the nav content itself decide its width (we already overrode navbar to not use a container) #}
    <div class="conatiner nav-main">
        {% block base_navigation_inner %}
            {% sw_include '@Storefront/storefront/layout/navbar/navbar.html.twig' with { header: header } %}
        {% endblock %}
    </div>
{% endblock %}
